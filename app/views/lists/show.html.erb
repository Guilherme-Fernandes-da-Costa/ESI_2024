            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td>
                <strong><%= item.name %></strong>
                <% if item.tag.present? %>
                  <br><small style="color: #666;">(<%= item.tag %>)</small>
                <% end %>
              </td>
              <td>
                <%= number_to_currency(item.preco, unit: "R$ ", separator: ",", delimiter: ".") %>
              </td>
              <td><%= item.quantity %></td>
              <td>
                <div class="quantity-form">
                  <%= form_with(model: item, url: list_item_path(@list, item), method: :patch, data: { remote: true }) do |f| %>
