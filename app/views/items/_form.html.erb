<%= form_with(model: [@lista, @item], local: true) do |form| %>
  <% if @item.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@item.errors.count, "erro") %> impediram o salvamento:</h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Novo item" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field" style="margin-top:15px;">
    <%= form.label :tags, "Tags (opcional)" %><br>
    <%= form.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |b| %>
      <div class="form-check form-check-inline">
        <%= b.check_box(class: "form-check-input") %>
        <%= b.label(class: "form-check-label") %>
      </div>
    <% end %>
  </div>

  <div class="actions" style="margin-top:20px;">
    <%= form.submit "Adicionar", class: "btn btn-success" %>
  </div>
<% end %>
